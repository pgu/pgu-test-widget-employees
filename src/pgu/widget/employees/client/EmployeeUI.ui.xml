<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
            xmlns:g="urn:import:com.google.gwt.user.client.ui"
            xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <g:HTMLPanel addStyleNames="container-fluid">
        
        <div class="row-fluid">
            <b:WellForm>
                <b:ControlLabel>Name</b:ControlLabel>
                <b:TextBox ui:field="nameBox" placeholder="John Smith"/>
                <g:HTMLPanel ui:field="pictureContainer" addStyleNames="row-fluid">
                    <ul class="thumbnails">
                      <li class="span3">
                        <a href="javascript:;" class="thumbnail">
                          <g:Image ui:field="picture" />
                        </a>
                      </li>
                    </ul>
                </g:HTMLPanel>
                <b:ControlLabel>Technos</b:ControlLabel>
                <b:CheckBox ui:field="java">Java</b:CheckBox>
                <b:CheckBox ui:field="clojure">Clojure</b:CheckBox>
                <b:CheckBox ui:field="net">.Net</b:CheckBox>
                <b:CheckBox ui:field="js">Javascript</b:CheckBox>
                <b:CheckBox ui:field="gwt">GWT</b:CheckBox>
                <b:CheckBox ui:field="sql">SQL</b:CheckBox>
                <b:CheckBox ui:field="nosql">NoSQL</b:CheckBox>
                <b:ControlLabel/>
                <b:Button ui:field="saveBtn" type="PRIMARY" icon="SAVE" />
            </b:WellForm>
        </div>
        
    </g:HTMLPanel>
</ui:UiBinder> 