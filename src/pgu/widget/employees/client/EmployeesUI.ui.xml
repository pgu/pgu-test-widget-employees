<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
            xmlns:g="urn:import:com.google.gwt.user.client.ui"
            xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <g:HTMLPanel addStyleNames="container-fluid">
        <div class="row-fluid">
        
            <b:Hero>
                <b:Heading size="2">Employees Widget</b:Heading>
                <b:Paragraph>Manage your employees</b:Paragraph>
            </b:Hero>
        </div>
        
        <div class="row-fluid">
            <g:HTML ui:field="employeesArea" addStyleNames="row-fluid" />
        </div>
        
        <div class="row-fluid">
            <b:Button ui:field="addBtn" type="PRIMARY" icon="PLUS" />
        </div>
        
    </g:HTMLPanel>

</ui:UiBinder> 